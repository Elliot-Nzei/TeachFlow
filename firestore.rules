rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow a user to read and write to all documents and subcollections within their own user folder.
    // This is the primary rule for data ownership.
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // Allow any authenticated user to query the 'users' collection,
    // but ONLY if they are specifically querying by the 'userCode' field.
    // This is required for the Data Transfer feature to find a recipient.
    match /users/{userId} {
      allow list: if request.auth != null && request.query.where.size() == 1 && 'userCode' in request.query.where;
    }

    // Allow any authenticated user to create a new document in another user's 'incomingTransfers' subcollection.
    // The {documents=**} rule above already gives the owner full control after creation.
    match /users/{userId}/incomingTransfers/{transferId} {
      allow create: if request.auth != null && request.auth.uid != userId;
    }
  }
}
