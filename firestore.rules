
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Public Data Rules ---
    // Matches the metadata collection specifically.
    match /metadata/{docId} {
      // Allow anyone to read documents in the metadata collection.
      allow read: if true;
      
      // Deny all write operations from the client-side.
      // Writes should only happen from a trusted backend environment.
      allow write: if false;
    }

    // --- User-Specific Data Rules ---
    // Secure all documents within each user's private space.
    match /users/{userId}/{document=**} {
      // Only allow a user to read or write their own documents.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
