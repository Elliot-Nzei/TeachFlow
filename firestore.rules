rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // Allow an admin to read the full list of users for management purposes.
      allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

      // A user can create their OWN user document upon registration.
      allow create: if request.auth != null && request.auth.uid == userId;

      // An authenticated user can read/update/delete their OWN user document.
      // An admin can read any user's document.
      allow read, update, delete: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    // Rules for user-specific subcollections (e.g., classes, students, etc.)
    match /users/{userId}/{document=**} {
      // Only the user who owns the data can read or write to their subcollections.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for public collections
    match /marketplace_products/{productId} {
      // Any authenticated user can read marketplace products.
      allow read: if request.auth != null;
    }
  }
}
