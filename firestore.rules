rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Allow authenticated users to query the users collection to find other users by code
    match /users/{userId} {
      allow list: if isSignedIn();
      allow get, update, delete: if isOwner(userId);

      // Subcollections
      match /{subcollection}/{docId} {
        allow read, write: if isOwner(userId);
      }

      // Special rule for incoming transfers
      match /incomingTransfers/{transferId} {
        allow read, update, delete: if isOwner(userId);

        // Allow any authenticated user to CREATE a transfer request for another user,
        // but only if the data is valid.
        allow create: if isSignedIn()
                      && request.resource.data.toUserId == userId
                      && request.resource.data.fromUserId == request.auth.uid;
      }
    }
  }
}