rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own data.
    // This rule recursively applies to all subcollections.
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to look up another user by their userCode.
    // This is required for the Data Transfer feature.
    match /users/{userId} {
      allow list: if request.auth != null && request.query.get('where')[0][1] == 'userCode';
    }

    // Allow any authenticated user to create an incoming transfer request for another user.
    match /users/{userId}/incomingTransfers/{transferId} {
      allow create: if request.auth != null;
    }
  }
}
