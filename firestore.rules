rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own user document.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;

      // Users can manage their own subcollections.
      match /{subcollection}/{docId} {
        allow read, write, delete: if request.auth.uid == userId;
      }
    }

    // Public access for the Parent Portal.
    // Anyone can query the students collection ONLY by parentId.
    // They cannot list all students, only fetch specific ones they have the ID for.
    match /students/{studentId} {
       allow list: if request.auth == null && request.query.keys.hasAny(['parentId']);
       allow get: if true; // Allows fetching related data after initial query
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
