rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own user document.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;

      // Users can manage their own subcollections.
      match /{subcollection}/{docId} {
        allow read, write, delete: if request.auth.uid == userId;
      }
    }

    // Authenticated users can query the students collection by their own userId.
    match /students/{studentId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      
      // Public access for the Parent Portal:
      // Allow unauthenticated users to LIST students ONLY IF they are querying by 'parentId'.
      // This is secure because they can't browse all students; they must know the exact ID.
      allow list: if request.auth == null && 'parentId' in request.query.where;
    }

    // Default deny all other access.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
