rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to query for other users by their unique userCode for data transfers.
    // This rule is secure because it only allows listing documents if the query
    // is specifically filtering by 'userCode', preventing a full scan of all users.
    match /users/{userId} {
      allow list: if request.query.keys().hasOnly(['userCode']);
    }

    // Grant a user full read and write access to their own user document
    // and all documents and subcollections nested underneath it (e.g., classes, students, grades).
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow an authenticated user to create an incoming transfer request
    // in another user's subcollection. The recipient user will have full control
    // over this document after it's created, based on the rule above.
    match /users/{recipientId}/incomingTransfers/{transferId} {
      allow create: if request.auth != null && request.resource.data.fromUserId == request.auth.uid;
    }
  }
}
