rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to query the users collection to find others by userCode for transfers
    match /users/{userId} {
      allow list: if request.auth != null;
    }

    // Allow users full read/write access to their own user document and all subcollections
    // This single rule covers classes, students, grades, subjects, transfers, etc.
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // As a security measure, explicitly deny all other operations on all other paths.
    // This is not strictly necessary as rules are deny-by-default, but it makes the intent clear.
    match /{path=**}/documents {
        allow read, write: if false;
    }
  }
}