rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow authenticated users to query the top-level 'users' collection.
    // This is required for the data transfer feature to find a user by their userCode.
    // Note: This does not allow reading the documents themselves, only querying the collection.
    match /users/{userId} {
      allow list: if request.auth != null;
    }

    // A user can read, write, update, and delete their own user document and all documents
    // and subcollections nested within it. This single rule provides comprehensive
    // ownership-based security for all user-specific data like classes, students, grades, etc.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // Allow any authenticated user to create a transfer request in another user's 'incomingTransfers' subcollection.
    // The rule above (/users/{userId}/{document=**}) ensures that only the recipient (the owner) can read or
    // update this transfer request after it has been created.
    match /users/{userId}/incomingTransfers/{transferId} {
      allow create: if request.auth != null;
    }
  }
}
